@using StealFocus.TfsExtensions.Dto
@using StealFocus.TfsExtensions.Web.UI.Controllers
@using StealFocus.TfsExtensions.Web.UI

@model BuildDefinitionDtoCollection

@{
    ViewBag.Title = "TeamBuildDefinitions";
}

<h2>TeamBuildDefinitions</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                Team Build Name
            </th>
            <th>
                Include
            </th>
        </tr>
        @foreach (BuildDefinitionDto buildDefinition in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(item => buildDefinition.Name)
                </td>
                <td>
                    <input type="checkbox" name="@FormCollectionItemName.SelectedTeamBuildDefinitions" value="@buildDefinition.Name" />
                </td>
            </tr>
        }
    </table>
    <input type="hidden" name="@FormCollectionItemName.TeamProjectCollectionId" value="@ViewData[ViewDataKey.TeamProjectCollectionId]" />
    <input type="hidden" name="@FormCollectionItemName.TeamProjectName" value="@ViewData[ViewDataKey.TeamProjectName]" />
    <br />
    <input type="submit" value="Submit" />
}